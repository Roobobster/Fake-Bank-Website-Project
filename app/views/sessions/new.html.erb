<div class="container-fluid" id="login-container">
    <p id=”alert”><%= alert %></p> <!--make prettier later-->
	<div class="row">
		<div class="col-md-4">
		</div>
		<div class="col-md-4">
            <div class="wrapLogin">
                <span class="logo"> 
                    <%= image_tag("/images/fox.png", :size => "80x100")%>
                </span>
                <h1 class="text-center">Log In</h1>
                <br/>
                <%=bootstrap_form_with(url: login_path, scope: :session, local: true) do |f| %>
                <%= f.text_field :username %>
                <%= f.password_field :password %>
                <br/>

                <div class="col text-center">
                    <%= f.submit "Login", class: 'btn btn-primary' %> 
                </div>

                <% end %>
            </div>
		</div>
		<div class="col-md-4">
		</div>
	</div>
</div>