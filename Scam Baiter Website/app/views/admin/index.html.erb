<div class="admin index">
  <h2>Profiles</h2>

  <%= link_to("Add a New Profile", {:action => 'new'}, :class => 'action new') %>

  <table class="listing" summary="Profile list">
    <tr class="header">
      
      <th>Username</th>
      
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
  
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => user.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => user.id}, :class => 'action edit') %>
        <%= link_to("Delete", '#', :class => 'action delete') %>
      </td>
    
    </tr>
    <% end %>
  </table>
</div>
