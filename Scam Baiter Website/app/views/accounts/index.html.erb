
<html>
  <body class= "profile-body">

    <div class="account-content">


      <h2 class="text-center account-title" >Account</h2> 

      <div class="p-4 text-center" > <%= link_to("Add a New Account", new_account_path(id: @profile_id), :class => 'btn-account new-button', id: "account-new-button") %> </div>
      <br/>
      <table class="table accounts text-center">
            <tr class="header">
              <th width="0%">Account ID</th>
              <th width="10%">Amount</th>
              <th width="20%">Type</th>
              <th width="100%">Action</th>
            </tr>
            
            <% @accounts.each do |account| %>
                <tr>
                <td><%= account.id %></td>
                <td><%= account.amount %></td>
                <td><%= account.account_type %></td>

            
                <td class="actions"> 
                    <%= link_to('Show', account_path(account), :class => 'btn-profile show-button', id: "profile-show-button") %>
                    <%= link_to('Edit', edit_account_path(account, profile_id: @profile_id), :class => 'btn-profile edit-button', id: "profile-edit-button") %>
                    <%= link_to('Delete', account_path(account), :method => 'delete', :class => 'btn-profile delete-button', id: "profile-delete-button") %>
                </td>
                
                </tr>
            <% end %>
        </table>
    </div>
  </body>
</html>



