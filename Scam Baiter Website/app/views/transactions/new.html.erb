<%= link_to("<< Back to List", transactions_path, :class => 'back_to_list') %>

<div class="transaction_new">
    <h1>Add Transactions</h1>

    <% if current_user.admin %>
        <%= form_for(@transaction, :url => transactions_path, :method => 'post') do |f| %>

            <%= render(:partial => 'form', :locals => {:f => f}) %>

            <div class="form-buttons">
                <%= f.submit("Add Transaction") %>
            </div>

        <% end %>
    <% else %>
        <h3>Cannot edit transation history!!</h3>
    <% end %>
  
</div>