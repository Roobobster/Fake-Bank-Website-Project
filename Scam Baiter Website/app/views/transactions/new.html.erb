<%= link_to("<< Back to List", transactions_path, :class => 'back_to_list') %>

<div class="transaction_new">
    <h1>Add Transactions</h1>

    <% if @transaction.errors.any? %>
        <%= @transaction.errors.full_messages %>
    <% end %>

    <% if current_user.admin %>
        <%= form_for(@transaction, :url => transactions_path, :method => 'post') do |f| %>

        <table>
            <tr>
                <th>Account</th>
                <td><%= f.text_field(:account_id) %></td>
            </tr>
            <tr>
                <th>Date</th>
                <td><%= f.text_field(:transaction_datetime) %></td>
            </tr>
            <tr>
                <th>Transactor</th>
                <td><%= f.text_field(:transactor) %></td>
            </tr>
            <tr>
                <th>Message</th>
                <td><%= f.text_field(:message) %></td>
            </tr>
            <tr>
                <th>Amount</th>
                <td><%= f.text_field(:amount) %></td>
            </tr>
        </table>

        <div class="form-buttons">
            <%= f.submit("Add Transaction") %>
        </div>

        <% end %>
    <% else %>
        <h3>Cannot edit transation history!!</h3>
    <% end %>
  
</div>